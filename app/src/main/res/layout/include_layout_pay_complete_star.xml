<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_container_margin"
        android:layout_marginRight="@dimen/right_container_margin"
        android:background="@drawable/shape_white_radius_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_radius_10"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="197dp"
                    android:layout_height="224dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/image_onestarpaymentissuccessful" />

                <TextView
                    android:id="@+id/tv_paycomplete_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="恭喜您已成为【三少变美】一星粉丝"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_member"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_radius_20_b6a57b"
                android:gravity="center"
                android:text="会员权益"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</layout>