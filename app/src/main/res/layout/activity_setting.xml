<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.personal.view.SettingNameActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.sanshao.commonui.titlebar.TitleBar
                android:id="@+id/title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                app:title="个人设置" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_login_input_phone"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.sanshao.bs.widget.PersonalAccountView
                    android:id="@+id/pav_account"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:icon_pav="@drawable/beautiful"
                    app:title_pav="账户安全" />

                <com.sanshao.bs.widget.PersonalAccountView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:visibility="gone"
                    app:content_pav="未认证"
                    app:icon_pav="@drawable/beautiful"
                    app:title_pav="实名认证"
                    tools:visibility="visible" />

                <com.sanshao.bs.widget.PersonalAccountView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:icon_pav="@drawable/beautiful"
                    app:title_pav="问题反馈" />

                <com.sanshao.bs.widget.PersonalAccountView
                    android:id="@+id/pav_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    app:icon_pav="@drawable/beautiful"
                    app:title_pav="关于我们" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>