    <application>

        <activity
            android:name="com.sanshao.livemodule.zhibo.login.TCLoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.login.TCRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/RegisterTheme" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.main.TCMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.anchor.prepare.TCAnchorPrepareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.audience.TCAudienceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PlayerTheme"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.playback.TCPlaybackActivity"
            android:screenOrientation="portrait"
            android:theme="@style/PlayerTheme"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.anchor.TCCameraAnchorActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.anchor.screen.TCScreenAnchorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/RecordActivityTheme"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="com.sanshao.livemodule.zhibo.anchor.screen.TCScreenRecordService"
            android:enabled="true"
            android:exported="false">

        </service>

        <activity
            android:name="com.sanshao.livemodule.zhibo.main.splash.TCSplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.sanshao.livemodule.zhibo.profile.TCEditUseInfoActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.tencent.rtmp.video.TXScreenCapture$TXScreenCaptureAssistantActivity"
            android:theme="@android:style/Theme.Translucent" />


        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.sanshao.bs.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>

        <uses-library
            android:name="com.google.android.maps"
            android:required="false" />
        <uses-library android:name="android.test.runner" />


